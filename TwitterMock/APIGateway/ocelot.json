        "POST"
      ],
      "DownstreamPathTemplate": "/api/User/AddUser",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5221
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/User/GetUsers",
      "UpstreamHttpMethod": [
