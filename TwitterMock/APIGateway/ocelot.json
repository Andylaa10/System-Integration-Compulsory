      ]
    },
    {
      "UpstreamPathTemplate": "/api/Auth/ValidateToken",
      "UpstreamHttpMethod": [
        "GET"
      ],
      "DownstreamPathTemplate": "/api/Auth/ValidateToken",
      "DownstreamScheme": "http",
